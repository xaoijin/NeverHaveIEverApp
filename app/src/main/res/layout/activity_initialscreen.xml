<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.jldevelops.neverhaveiever.InitialScreen">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/giffy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/beercheer"
        android:translationZ="-90dp"
        tools:ignore="ImageContrastCheck" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/ThemeOverlay.Material3">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/never_have_i_ever"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changeNameB"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@drawable/contrastinitialscreen"
            android:shadowColor="#231EA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            android:text="@string/change_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.926"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.203" />

        <ImageView
            android:id="@+id/iconimginitial"
            android:layout_width="79dp"
            android:layout_height="75dp"
            android:background="@drawable/borderimage"
            android:src="@drawable/beermug"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094"
            android:contentDescription="@string/player_icon" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changeIconB"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@drawable/contrastinitialscreen"
            android:shadowColor="#231EA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            android:text="@string/change_icon"
            android:textColor="@color/DarkBlue"
            android:translationZ="90dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/changeNameB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical"
            android:translationZ="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.966">

            <TextView
                android:id="@+id/codeError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Red"
                android:text="@string/room_does_not_exist"
                android:textColor="#000000"
                android:visibility="visible" />

            <EditText
                android:id="@+id/gameCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:autofillHints=""
                android:background="@color/RosyBrown"
                android:ems="7"
                android:hint="@string/room_code_here"
                android:inputType="text"
                android:maxLength="6"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColorHint="#3E2723" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/joinGame"
                android:layout_width="132dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:background="@drawable/cjgamebuttondesign"
                android:shadowColor="#190FA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="12"
                android:text="@string/join_game"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/createGame"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:background="@drawable/cjgamebuttondesign"
                android:shadowColor="#190FA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="12"
                android:text="@string/create_game"
                 />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cQuestionSet"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/questionsetbuttondesign"
                android:shadowColor="#190FA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="12"
                android:text="@string/question_sets"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/log_out"
                android:layout_width="135dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/logoutdesign"
                android:minHeight="48dp"
                android:shadowColor="#190FA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="12"
                android:text="@string/logout" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.896"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.092">

            <TextView
                android:id="@+id/displaytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/display_name"
                android:textColor="@color/WhiteSmoke"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/displayname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/displaytext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="@string/something"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/BlanchedAlmond"
            android:text="@string/sound_off"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.893" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/playS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/BlanchedAlmond"
            android:text="@string/sound_on"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mute"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>