<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glasses"
    android:orientation="vertical"
    tools:context=".QuestionSets">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#6B5298"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/Rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/question_set_card"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Qs1"
                        android:layout_width="143dp"
                        android:layout_height="63dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="80dp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:text="Question set 1"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/e1"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Edit"
                            android:textColor="#FFFFFF" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/r1"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Rename"
                            android:textColor="#FFFFFF" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/s1"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Select"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#6B5298"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/Rl2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/question_set_card"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Qs2"
                        android:layout_width="143dp"
                        android:layout_height="63dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="80dp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:text="Question set 2"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/e2"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Edit"
                            android:textColor="#FFFFFF" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/r2"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Rename"
                            android:textColor="#FFFFFF" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/s2"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Select"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#6B5298"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/Rl3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/question_set_card"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Qs3"
                        android:layout_width="143dp"
                        android:layout_height="63dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="80dp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:text="Question set 3"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/e3"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Edit"
                            android:textColor="#FFFFFF" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/r3"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Rename"
                            android:textColor="#FFFFFF" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/s3"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/question_set_btn"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="Select"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
    
